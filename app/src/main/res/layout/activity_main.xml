<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:screenOrientation="portrait"
    android:fitsSystemWindows="true"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_70sdp"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="43sp"
        android:fontFamily="@font/zzgf" />


    <ImageView
        android:id="@+id/line1"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appTitle"
        android:layout_toStartOf="@+id/logInHint"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:alpha=".70"
        android:src="@drawable/line" />

    <TextView
        android:id="@+id/logInHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appTitle"
        android:layout_marginTop="@dimen/_26sdp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/sfuid_thin"
        android:alpha=".80"
        android:text="Log in with Email"/>

    <ImageView
        android:id="@+id/line2"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appTitle"
        android:layout_toEndOf="@+id/logInHint"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:alpha=".70"
        android:src="@drawable/line" />

    <ImageView
        android:id="@+id/emailRectangle"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/logInHint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_54sdp"
        android:alpha=".75"
        android:src="@drawable/edittext_bg" />

    <EditText
        android:id="@+id/email_login"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/logInHint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_59sdp"
        android:hint="Email address"
        android:textColorHint="#B2FFFFFF"
        android:textColor="#ffffff"
        android:gravity="center"
        android:fontFamily="@font/sfuid_thin"
        android:singleLine="true"
        android:background="@null"
        />

    <ImageView
        android:id="@+id/passwordRectangle"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/emailRectangle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:alpha=".75"
        android:src="@drawable/edittext_bg" />

    <LinearLayout
        android:id="@+id/password_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailRectangle"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/password_login"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:hint="Password"
            android:textColorHint="#B2FFFFFF"
            android:textColor="#ffffff"
            android:gravity="center"
            android:fontFamily="@font/sfuid_thin"
            android:singleLine="true"
            android:background="@null"
            android:inputType="textPassword" />


        <TextView
            android:id="@+id/forgetPassword_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="0dp"
            android:text="Forget password?"
            android:fontFamily="@font/sfuid_thin"
            android:textColor="#D9FFFFFF"/>

    </LinearLayout>


    <Button
        android:id="@+id/login_main"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/password_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Log in"
        android:textColor="#E6FFFFFF"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/sfuid_regular"
        android:background="#80F5AFCA"
        />



    <Button
        android:id="@+id/signUp_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:alpha=".80"
        android:text="Register a new account"
        android:textStyle="bold"
        android:textColor="#E6FFFFFF"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/sfuid_regular"
        android:textAllCaps="false"
        android:background="@drawable/footer"
        />



</RelativeLayout>